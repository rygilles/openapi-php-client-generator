{% set doc = '' %}
{% if route.summary != '' %}{% set doc = doc ~ route.summary|raw ~ "\n" %}{% endif %}
{% if route.description != '' %}{% set doc = doc ~ (doc == '' ? '' : "\n") ~ route.description|raw ~ "\n" %}{% endif %}
{% set params = '' %}
{% for parameterName, parameter in route.definitionParameters %}
{% set paramType = 'mixed' %}
{% if parameter.parameter.type is defined %}
{% if parameter.parameter.type == 'string' %}{% set paramType = 'string' %}{% endif %}
{% if parameter.parameter.type == 'integer' %}{% set paramType = 'int' %}{% endif %}
{% endif %}
{% set paramDescription = '' %}
{% if parameter.parameter.format is defined %}
{% set paramDescription = 'Format: ' ~ parameter.parameter.format ~ '.' %}
{% endif %}
{% if parameter.parameter.description is defined %}
{% set paramDescription = paramDescription ~ (paramDescription == '' ? '' : ' ') ~ parameter.parameter.description %}
{% endif %}
{% set params = params ~ '@param ' ~ paramType ~ ' ' ~ parameterName ~ (paramDescription == '' ? '' : (' ' ~ paramDescription)) ~"\n" %}
{% endfor %}
{% if params != '' %}{% set doc = doc ~ (doc == '' ? '' : "\n") ~ params %}{% endif %}
{% if doc != '' %}{{ doc|phpdoc(1)|raw }}{% endif %}